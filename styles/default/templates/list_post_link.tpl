<div class="post-type-{post_type}">
	<div class="row">
		<div class="col-md-4">
			<div class="teaser-image">
				<img src="{post_img_src}" class="img-thumbnail">
			</div>
		</div>
		<div class="col-md-8">
			<span>{post_releasedate} </span>
			<a class="post-headline-link" href="{post_href}"><h3>{post_title}</h3></a>
				{post_teaser}
				<p><a href="{post_external_link}" target="_blank">{post_external_link}</a></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 offset-md-4">
			<p style="float:right;">{post_cats}</p>
		</div>
	</div>
</div>